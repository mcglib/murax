<% resource_type_authorities = Hyrax::ResourceTypeAuthorities.new
  item_types = resource_type_authorities.select_all_options.to_h
  if current_page?('/concern/reports/new?locale=en')
    item_type = item_types["Report"]
  elsif current_page?('/concern/articles/new?locale=en') 
    item_type = item_types["Article"]
  elsif current_page?('/concern/theses/new?locale=en')
    item_type = item_types["Thesis"]
  else 
    item_type = item_types["Thesis"]
  end
%> 
<%= f.input :rtype, 
  collection: resource_type_authorities.select_all_options,
  label: 'Item type',
  selected: item_type,
  required: f.object.required?(key) 
%>
