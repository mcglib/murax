<% if f.object.multiple? key %>
  <% resource_type_authorities = Hyrax::ResourceTypeAuthorities.new %> 
  <%= f.input :rtype,
     collection: resource_type_authorities.select_active_options,
     include_blank: true,
     label: 'Type',
     required: f.object.required?(key) 
  %>
<% else %>
  <% resource_type_authorities = Hyrax::ResourceTypeAuthorities.new %>
  <%= f.input :rtype,
     collection: resource_type_authorities.select_active_options,
     include_blank: true,
     label: 'Type', 
     required: f.object.required?(key) 
  %>
<% end %>
