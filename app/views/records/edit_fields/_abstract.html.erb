<% languages_auth = Hyrax::LanguageService.new %>
<% if f.object.multiple? key %>
  <%= f.input :abstract, as: :multi_value_select, collection: languages_auth.select_all_options %>
  <%= f.input :abstract, as: :multi_value, required: f.object.required?(key) %>
<% else %>
  <%= f.input :abstract, as: :text, required: f.object.required?(key) %>
<% end %>
