<% if f.object.multiple? key %>
  <%= f.input :orcidid, as: :multi_value, label: 'ORCID iD', hint: 'Format as full URL, e.g.  https://orcid.org/0000-0002-4733-8565', required: f.object.required?(key) %>
<% else %>
  <%= f.input :orcidid, as: :text, label: 'ORCID iD', hint: 'Format as full URL, e.g.  https://orcid.org/0000-0002-4733-8565',  required: f.object.required?(key) %>
<% end %>
