<% if f.object.multiple? key %>
  <%= f.input :pmid, as: :multi_value, label: 'PMID', hint: 'Enter as number only (e.g.18163481)', required: f.object.required?(key) %>
<% else %>
  <%= f.input :pmid, as: :text, label: 'PMID', hint: 'Enter as number only (e.g.18163481)', required: f.object.required?(key) %>
<% end %>
