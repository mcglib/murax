<% if f.object.multiple? key %>
  <%= f.input :Description, as: :multi_value, hint: "Description of work added.", input_html: { rows: '14', type: 'textarea'}, required: f.object.required?(key) %>
<% else %>
  <%= f.input :Description, as: :text, hint: "Description of work added.", input_html: { rows: '14' }, required: f.object.required?(key) %>
<% end %>
