<% if f.object.multiple? key %>
  <%= f.input :rights, as: :multi_value, html5: true, label: 'Rights', required: f.object.required?(key), input_html: { rows: "3", type: "textarea", value: item_rights_helper(f.object.rights) } %>
<% else %>
  <%= f.input :rights, as: :text, html5: true, label: 'Rights', required: f.object.required?(key), input_html: { rows: "3", type: "textarea", value: item_rights_helper(f.object.rights) } %>
<% end %>
