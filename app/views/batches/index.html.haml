%h1 Digitool imports: Listing of batches

%table.table.table-striped#batch-table{"data-toggle":"table",
      "data-filter-control": "true",
      "data-show-filter": "false",
      "data-show-refresh": "false",
      "data-search": "true",
      "data-smart-display": "true",
      "data-classes": "table table-hover table-no-bordered",
      "data-toolbar": "#toolbar",
      "data-show-columns": "true",
      "data-show-export": "true",
      "data-pagination": "true",
      "data-page-list": "[10, 25, 50, 100, 200, All]",
      "data-show-search-clear-button": "true",
      "data-show-footer": "true",
      "data-footer-style": "footerStyle",
      "data-show-export": "true",
      }
%table
  %thead.thead-dark
    %tr
      %th Batch ID
      %th Batch name
      %th No of items in batch
      %th Executed on
      %th Updated
      %th Actions

  %tbody
    - @batches.each do |batch|
      %tr
        %td= link_to batch.id, batch
        %td= batch.name
        %td.centered= batch.no
        %td{}
          = l(batch.created_at, :format => :long)
        %td{}
          = l(batch.updated_at, :format => :long)
        %td
          %span= link_to 'Edit', edit_batch_path(batch)
          %span= link_to 'Destroy', batch, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Batch', new_batch_path
