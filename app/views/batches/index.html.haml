%h1 Digitool imports: Batch lists

%table.table.table-striped#batch-table{"data-toggle":"table",
      "data-filter-control": "true",
      "data-show-filter": "true",
      "data-show-refresh": "false",
      "data-search": "true",
      "data-smart-display": "true",
      "data-sortable": "true",
      "data-classes": "table table-hover table-no-bordered",
      "data-toolbar": "#toolbar",
      "data-show-columns": "true",
      "data-show-export": "true",
      "data-pagination": "true",
      "data-page-list": "[10, 25, 50, 100, 200, All]",
      "data-show-search-clear-button": "true",
      "data-show-footer": "true",
      "data-footer-style": "footerStyle",
      "data-show-export": "true",
      }
  %thead.thead-dark
    %tr
      %th{"data-field": "id", "data-sortable": "true"}  ID
      %th{"data-field": "name", "data-sortable": "true"}  Batch name
      %th{"data-field": "no", "data-sortable": "true"}  No of items in batch
      %th{"data-field": "created_at", "data-sortable": "true"} Started  on
      %th{"data-field": "total_time", "data-sortable": "true"} Total time used
      %th Actions

  %tbody
    - @batches.each do |batch|
      %tr
        %td= link_to batch.id, batch
        %td= batch.name
        %td.centered= batch.no
        %td{}
          = l(batch.created_at, :format => :short)
        %td{}
          = l(batch.updated_at - batch.created_at), :format => :short)
        %td
          %span= link_to 'Edit', edit_batch_path(batch)
          %span= link_to 'Destroy', batch, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Batch', new_batch_path
